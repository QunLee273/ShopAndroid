<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Payment Information Text -->

    <!-- Total Amount Text -->

    <TextView
        android:id="@+id/payment_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="200dp"
        android:paddingBottom="16dp"
        android:text="Quét mã để chuyển tiền đến\nVU HOAI NAM\nSố tài khoản: 6826 1020 03"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- QR Code Image -->

    <TextView
        android:id="@+id/total_amount_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_info_text_view"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="3dp"
        android:paddingBottom="16dp"
        android:text="Tổng tiền: 0 VND"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qr_code_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_amount_text_view"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
