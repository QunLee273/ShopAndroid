<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrowback"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/setting"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="50dp"/>
    </LinearLayout>

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"/>

    <!-- Các item trong danh sách -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!-- Item 1 -->
        <Button
            android:id="@+id/btnCaiDatChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Cài đặt Chat"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <!-- Item 2 -->
        <Button
            android:id="@+id/btnCaiDatThongBao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Cài đặt Thông báo"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <!-- Item 3 -->
        <Button
            android:id="@+id/btnCaiDatAnToanBaoMat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Cài đặt An toàn và bảo mật"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <!-- Item 4 -->
        <Button
            android:id="@+id/btnCaiDatNgonNgu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Cài đặt Ngôn ngữ"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <!-- Header Hỗ trợ -->
        <TextView
            android:id="@+id/tvHoTro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"/>

        <!-- Item 5 -->
        <Button
            android:id="@+id/btnTrungTamHoTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Trung tâm hỗ trợ"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <!-- Item 6 -->
        <Button
            android:id="@+id/btnTieuChuanCongDong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Tiêu chuẩn cộng đồng"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <!-- Item 7 -->
        <Button
            android:id="@+id/btnDieuKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Điều khoản"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <!-- Item 8 -->
        <Button
            android:id="@+id/btnGioiThieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="Giới thiệu"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>
    </LinearLayout>

    <!-- Đăng xuất -->
    <Button
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textSize="32sp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="70dp"/>

</LinearLayout>
