<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageHinhAnhSanPham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/textTenSanPham"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTenSanPham"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageHinhAnhSanPham"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textGiaSanPham"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Giá sản phẩm"
        app:layout_constraintStart_toEndOf="@+id/imageHinhAnhSanPham"
        app:layout_constraintTop_toBottomOf="@id/textTenSanPham"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textSoLuongTonKho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số lượng tồn kho"
        app:layout_constraintStart_toEndOf="@+id/imageHinhAnhSanPham"
        app:layout_constraintTop_toBottomOf="@id/textGiaSanPham"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
